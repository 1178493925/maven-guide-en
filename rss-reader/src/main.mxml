<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" 
				layout="absolute" 
				width="100%"
				height="100%" 
				creationComplete="feedRequest.send(); blogrollRequest.send(); bookFeedRequest.send();" 
				xmlns:local="*"
				verticalScrollPolicy="off"
				backgroundColor="white" 
				backgroundGradientAlphas="no">
	<mx:Style>
		Application {
			background-color: white;
			border-thickness: 2px;
			border-color: black;
			border-style: solid;
		}
		
		.title {
			font-size: 12px;
			font-weight: bold;
		}
	</mx:Style>
	<mx:VBox verticalGap="0" height="100%" width="100%">
		<mx:Label id="blogTitle" text="Latest from the Sonatype Blogs" width="100%" styleName="title"/>
	 	<mx:Accordion width="100%" height="100%" >
		   <mx:VBox height="100%" width="100%" label="All Sonatype Blogs" verticalScrollPolicy="off">
		     <mx:Repeater id="posts" 
					 dataProvider="{feedRequest.lastResult.feed.entry}"
					 
					 >
		 		<local:PostItemRenderer data="{posts.currentItem}"/>
			 </mx:Repeater>
		   </mx:VBox>
		   <mx:VBox label="Maven Blogroll" height="100%" width="100%" verticalScrollPolicy="off">
		     <mx:Repeater id="blogrollPosts" 
					 dataProvider="{blogrollRequest.lastResult.rss.channel.item}"
					 
					 >
		 		<local:RSSPostItemRenderer data="{blogrollPosts.currentItem}"/>
			 </mx:Repeater>
		   </mx:VBox>
		   <mx:VBox label="Maven Book Blog" height="100%" width="100%" verticalScrollPolicy="off">
		     <mx:Repeater id="bookPosts" 
					 dataProvider="{bookFeedRequest.lastResult.feed.entry}"
					 
					 >
		 		<local:PostItemRenderer data="{bookPosts.currentItem}"/>
			 </mx:Repeater>
		   </mx:VBox>
	 	</mx:Accordion>
	</mx:VBox>
	 <mx:HTTPService id="feedRequest" 
	 				 url="http://blogs.sonatype.com/atom.xml" 
	 				 useProxy="false"/>
	 <mx:HTTPService id="blogrollRequest" 
	 				 url="http://feeds.feedburner.com/MavenBlogroll?format=xml"
	 				 useProxy="false"/>
	 <mx:HTTPService id="bookFeedRequest" 
	 				 url="http://blogs.sonatype.com/book/atom.xml" 
	 				 useProxy="false"/>
</mx:Application>
